pipeline {
    agent any
    environment {
        NETLIFY_SITE_ID = '' // Set an empty variable initially, it will be set dynamically
        NETLIFY_AUTH_TOKEN = credentials('netlify_auth_token') // Use credentials stored in Jenkins for authentication
    }
    stages {
        stage('Run Tests') {
            parallel {
                stage("Test") {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        script {
                            echo "Test stage"
                            if (fileExists('build/index.html')) {
                                echo "✅ index.html exists."
                            } else {
                                echo "❌ index.html not found!"
                                currentBuild.result = 'FAILURE'
                                error("index.html not found!")
                            }
                        }
                    }
                }

                stage("E2E") {
                    agent {
                        docker {
                            image 'mcr.microsoft.com/playwright:v1.56.0-noble'
                            reuseNode true
                        }
                    }
                    steps {
                        script {
                            sh 'npm install serve'
                            sh 'node_modules/.bin/serve -s build &'
                            sleep 10
                            sh 'npx playwright test'
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                script {
                    sh 'npm install netlify-cli@20.1.1'
                    sh 'node_modules/.bin/netlify --version'
                    if (env.NETLIFY_SITE_ID?.trim()) {
                        echo "Deploying to existing Netlify site with ID: ${env.NETLIFY_SITE_ID}"
                        sh "netlify deploy --site ${env.NETLIFY_SITE_ID} --prod"
                    } else {
                        // No Site ID, create a new site and deploy
                        echo "No Site ID found. Creating new Netlify site..."
                        
                        // Deploy first time (this will create the site and get the Site ID)
                        def deployResponse = sh(script: "netlify deploy --prod --dir=build", returnStdout: true).trim()

                        // Extract the Site ID from the output
                        def siteId = deployResponse =~ /Site ID: (\S+)/
                        if (siteId) {
                            env.NETLIFY_SITE_ID = siteId[0][1]
                            echo "New Netlify Site created with Site ID: ${env.NETLIFY_SITE_ID}"
                        } else {
                            error("Failed to extract Site ID from Netlify deployment.")
                        }
                    }
                }
            }
        }
    }
}
    // Optional post block (Uncomment to use)
    // post {
    //     always {
    //         publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playwright HTML Report', reportTitles: '', useWrapperFileDirectly: true])
